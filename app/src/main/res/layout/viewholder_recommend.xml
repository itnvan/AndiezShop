<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:background="@drawable/grey_bg"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="#E4E2E2"
        app:cardElevation="4dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_love"
            app:layout_constraintEnd_toEndOf="@id/img"
            app:layout_constraintTop_toTopOf="@id/img" />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCagetories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tony_kroos"
        android:textColor="@color/dark_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="parent" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/tvCagetories"
        app:layout_constraintTop_toBottomOf="@+id/tvCagetories"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/dimen_20sp"
        android:textStyle="normal"
        android:text="5"
        app:layout_constraintTop_toTopOf="@id/imgStar"
        app:layout_constraintBottom_toBottomOf="@id/imgStar"
        app:layout_constraintStart_toEndOf="@id/imgStar"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_money"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@id/imgStar"
        app:layout_constraintBottom_toBottomOf="@id/imgStar"
        app:layout_constraintEnd_toEndOf="parent"/>


</LinearLayout>